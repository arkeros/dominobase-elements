%polymer-element(name="material-layout" attributes="user scrollHeader" extends="core-scaffold" noscript=true)
    %template
        / smoosh
        %link(rel="stylesheet" href="../styles/material-layout.css")
        / endsmoosh
        %core-drawer-panel#drawerPanel(narrow="{{narrow}}" drawerWidth="{{drawerWidth}}" rightDrawer="{{rightDrawer}}" responsiveWidth="{{responsiveWidth}}" disableSwipe="{{disableSwipe}}")
            %div(vertical=true layout=true drawer=true)
                #userinfo(style="background-image:url('https://lh6.googleusercontent.com/-IxRknD2180s/UcojKSfeWII/AAAAAAAABkA/IKXa_LVQP0U/s630-fcrop64=1,40551f30ffbac26d/%25C2%25A9%2BAravind%2BKrishnaswamy_20120408-%252818_58_48%2529-sobranes-arch-s2-0387-Edit.jpg')")
                    .avatar(style="background-image:url('https://lh5.googleusercontent.com/-eCpUySsQ6cw/AAAAAAAAAAI/AAAAAAAAAG4/ZnUlYgSoNwU/photo.jpg?sz=50')")
                    .title
                        Rafael Arquero Gimeno
                        %paper-menu-button(icon="arrow-drop-down" halign="right")
                            %div Menu Item 1
                            %div Menu Item 2
                            %div Menu Item 3
                %content(select="[navigation], nav")
                %content.footer(select="footer")


            %core-scroll-header-panel#headerPanel(main=true condenses=true)
                %core-toolbar#appbar(class="{{mode}}")
                    %template(if="{{ mode != 'tall' }}")
                        %core-icon-button#menuButton(icon="menu" on-tap="{{togglePanel}}")
                        #title(flex=true)
                            %content(select="[title]")
                        %content.actions(select="[actions]")
                        %paper-menu-button(icon="more-vert" halign="right")
                            %paper-item(label="Refresh")
                            %paper-item(label="Send feedback")
                                %a(href="/contact" is="pushstate-anchor")
                            %paper-item(label="Settings")
                            %paper-item(label="Help")
                                %a(href="/help" is="pushstate-anchor")
                            / %div Sign Out
                    %template(if="{{ mode == 'tall' }}")
                        %core-icon-button#menuButton(icon="menu" on-tap="{{togglePanel}}")
                        .clip(flex=true)
                        %content.actions(select="[actions]")
                        %paper-menu-button(icon="more-vert" halign="right")
                            %paper-item(label="Refresh")
                            %paper-item(label="Send feedback")
                                %a(href="/contact" is="pushstate-anchor")
                            %paper-item(label="Settings")
                            %paper-item(label="Help")
                                %a(href="/help" is="pushstate-anchor")
                            / %div Sign Out
                        #title.bottom.indent
                            %content(select="[title]")

                .content(layout=true vertical=true)
                    %content
